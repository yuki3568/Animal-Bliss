<div class="h-screen flex items-center justify-center">
  <%= form_with(model: @video, local: true) do |form| %>
    <h1>新しい動画の投稿</h1>
    <div class="mb-3">
    <%= form.label :title %>
      <%= form.text_field :title, class: "form-control border border-gray-300 rounded" %>
    </div>
    <div class="mb-3">
      <%= form.label :url %>
      <%= form.text_field :url, class: "form-control border border-gray-300 rounded" %>
    </div>
    <div class="mb-3">
      <%= form.submit "投稿", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
