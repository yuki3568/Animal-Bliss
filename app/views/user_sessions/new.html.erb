<div class="h-screen flex items-top justify-center mt-10">
  <div class="row">
    <div class=" col-md-10 col-lg-8 mx-auto">
      <h1 class="text-xl md:text-4xl font-bold  mt-10 mb-10 pb-4 border-b-2 border-stone-400 text-center"><%= t('.title') %></h1>
      <%= form_with url: login_path do |f| %>
        <div class="mb-3">
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control border border-gray-300 rounded" %>
        </div>
        <div class="mb-3">
          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control border border-gray-300 rounded" %>
        </div>
        <%= f.submit t('.login'), class: "btn btn-primary" %>
      <% end %>
      <div class='text-center mt-10'>
        <%= link_to t('.to_register_page'), new_user_path %>
        <%= link_to t('.password_forget'), new_password_reset_path %>
      </div>
    </div>
  </div>
</div>
